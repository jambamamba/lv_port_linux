{
    "version":"1.0",
    "screen":{"width":"1024","height":"768"},
    "language":{"current":"en","default":"en"},
    "#style":{"padding":"0","margin":"0"},
    "style":{"class":"label","fgcolor":"#000","width":"50%","height":"10%","border":"solid-1px-#0f0"},
    "style":{"class":"textbox","fgcolor":"#000","bgcolor":"#444","y":"10%","width":"50%","height":"20%","border":"solid-4px-#fff"},
    "style":{"class":"tab_content","bgcolor":"#444","x":"0","y":"0","width":"95%","height":"85%","border":"solid-1px-#f0f"},
    "tabview":{
        "id":"tabview",
        "style":{"fgcolor":"#fff","bgcolor":"#444","corner-radius":"5"},
        "active_tab_bgcolor":"#fff",
        "active_tab_bottom_border":"solid-3px-#ccc",
        "tabbar_height":"75",
        "title":"ACME Weather Hub",
        "subtitle":"Local Weather Station",
        "img":"res/weather-hub-logo.png",
        "tabbar_location":"top",
        "show_tabs":"true",
        "active_tab_index":"0",
        "tabs":[
            {
                "tab":{
                    "id":"tab1",
                    "tab_header":{
                        "name":"Home",
                        "img":"res/home_icon.png"
                    },
                    "tab_content":{
                        "id":"tab_content1",
                        "class":"tab_content",
                        "view":{
                            "style":{"width":"100%","height":"100%","flex":{"flow":"column"},"checked_color":"#f00","border":"solid-1px-#ff0"},
                            "label":{
                                "id":"label1",
                                "class":"label",
                                "text":"Static Label"
                            },
                            "textbox":{
                                "class":"textbox",
                                "text":"Text Box",
                                "max_length":"1024",
                                "multiline":"true"
                            },
                            "group":"true",
                            "buttons":[
                                {
                                    "button":{
                                        "type":"switch",
                                        "style":{"fgcolor":"#fff","bgcolor":"#aaa","border":"none","width":"5%","height":"30","corner-radius":"0x7FFF"},
                                        "text":"Switch",
                                        "checkable":"true",
                                        "checked":"false"
                                    }
                                },
                                {
                                    "button":{
                                        "type":"radio",
                                        "style":{"fgcolor":"#fff","bgcolor":"#aaaaaa","border":"none","width":"50%","height":"50","corner-radius":"0x7FFF"},
                                        "text":"Radio Button",
                                        "checkable":"true",
                                        "checked":"true"
                                    }
                                },
                                {
                                    "button":{
                                        "type":"checkbox",
                                        "style":{"fgcolor":"#fff","bgcolor":"#aaaaaa","border":"none","width":"50%","height":"50"},
                                        "text":"Checkbox",
                                        "checkable":"true"
                                    }
                                },
                                {
                                    "button":{
                                        "type":"push",
                                        "style":{"fgcolor":"#fff","bgcolor":"#aaa","border":"none","width":"15%","height":"40"},
                                        "text":"Push button",
                                        "checkable":"true",
                                        "label":{"text":"Push Button"}
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            {
                "tab":{
                    "tab_header":{
                        "name":"History",
                        "img":"res/graph-icon.png"
                    },
                    "tab_content":{
                        "id":"tab_content2",
                        "class":"tab_content",
                        "label":{
                            "text":"hello world2 label",
                            "class":"label"
                        },  
                        "textbox":{
                            "text":"hello world2 textbox",
                            "max_length":"15",
                            "multiline":"false",
                            "class":"textbox"
                        }
                    }
                }
            },
            {
                "tab":{
                    "tab_header":{
                        "name":"Settings",
                        "img":"res/settings-hammer-wrench.png"
                    },
                    "tab_content":{
                        "class":"tab_content",
                        "label":{
                            "text":"hello world3 label",
                            "class":"label"
                        },  
                        "textbox":{
                            "text":"hello world3 textbox",
                            "max_length":"15",
                            "multiline":"false",
                            "class":"textbox"
                        }
                    }
                }
            }
        ]
    }
}